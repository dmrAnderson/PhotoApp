<div class="card w-50 mx-auto opacity">
  <div class="card">
    <h4 class="card-header text-center">Forgot your password?</h4>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <div class="col-sm-2">
            <%= f.label :email, class: "col-form-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 my-auto">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
          </div>
          <div class="col-sm-4 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
