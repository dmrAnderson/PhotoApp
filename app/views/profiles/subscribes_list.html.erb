<% if @friends.exists? %>
  <div class="row">
    <% @friends.each do |subscriber| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title">
              <%= link_to truncate(subscriber.name, length: 41), profile_path(subscriber) %>
            </h5>
            <p class="card-text">
              Subscribed on <%= current_user.subscriptions.find_by(friend_id: subscriber.id).created_at.to_date.strftime("%d, %B, %Y") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card w-25 mx-auto">
    <div class="card-body text-center">
      You haven't one subscribe
    </div>
  </div>
<% end %>
