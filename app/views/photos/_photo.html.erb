<tr id="photo-<%= photo.id %>">
  <td>
    <%= link_to edit_photo_path(photo), remote: true, title: "Edit?", class: "nav-link", id: "edit-photo-#{photo.id}" do %>
      <i><%= photo.description %></i>
    <% end %>
  </td>
  <td><%= link_to 'Show', photo, class: "badge badge-primary" %></td>
  <% if photo.user == current_user %>  
    <td>
      <%= link_to 'Destroy', photo, method: :delete, remote: true, class: "badge badge-primary" %>
    </td>
  <% end %>
</tr>
